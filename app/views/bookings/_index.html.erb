<div class="bookings-container">
  <% if current_user.photographer? %>
    <% @bookings.each do |booking| %>
      <div class="booking-card">
        <p class="booking-name">Client: <%= booking.user.full_name %></p>
        <p class="booking-email"><%= booking.user.email %></p>
        <p class="booking-date">Booked for <%= booking.date %></p>
      </div>
    <% end %>
  <% else %>
    <% @bookings.each do |booking| %>  
      <div class="booking-card">
        <p class="booking-name">Photographer: <%= booking.photographer.full_name %></p>
        <p class="booking-email">Email: <%= booking.photographer.email %></p>
        <div class="d-flex justify-content-between align-items-center">
        <p class="booking-date mb-0">Booked for <%= booking.date.strftime('%-I:%M %p, %B %d, %Y') %></p>
        <div class="link-secondary ms-3 d-flex flex-column justify-content-between ">
          <%= link_to "Edit", edit_booking_path(booking), class: "btn btn-custom-green btn-sm mb-1" %>
          <%= button_to "Delete", booking, method: :delete, class: "btn btn-danger btn-sm" %>
        </div>
       </div>      
       </div>
    <% end %>
  <% end %>
</div>


