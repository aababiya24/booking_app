<div class="container-fluid">
  <div class="row login-container">
    <!-- Right side form -->
    <div class="col-md-6 d-flex align-items-center">
      <div class="form-container w-100">
        <h2 class="login-heading mb-4">Sign up</h2>
        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="row g-3">
            <div class="col-md-6">
              <%= f.label :first_name, class: "form-label" %>
              <%= f.text_field :first_name, autofocus: true,class: "form-control form-control-sm" %>
            </div>

            <div class="col-md-6">
              <%= f.label :last_name, class: "form-label " %>
              <%= f.text_field :last_name, class: "form-control form-control-sm" %>
            </div>
          </div>

          <div class="mt-2">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autocomplete: "email", class: "form-control form-control-sm" %>
          </div>

          <div class="mt-2">
            <%= f.label :password, class: "form-label" %>
            <% if @minimum_password_length %>
            <span class="text-muted small">(<%= @minimum_password_length %> characters min)</span>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm" %>
          </div>

          <div class="mt-2">
            <%= f.label :password_confirmation, class: "form-label " %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm" %>
          </div>

          <div class="mt-2">
            <%= f.label :role, class: "form-label" %>
            <%= f.select :role, 
                User.roles.keys.map { |role| [role.humanize, role] }, 
                {}, 
                { class: "form-select form-select-sm" } 
            %>
          </div>

          <div class="mt-3">
            <%= f.submit "Sign up", class: "btn btn-login" %>
          </div>
        <% end %>

        <div class="links-container">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

    <!-- Left side image -->
    <div class="col-md-6 p-0 d-flex align-items-center"> 
      <%= image_tag 'photo4.jpg' ,class: "img-fluid" %>
    </div>
  </div>
</div>